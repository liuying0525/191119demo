.login {
	width: 100%;
	height: 100%;
	background: #fff;
}
.login text{
	margin-top:0!important;
  margin-left:5%;
  font-size: 32rpx;
  color: #000;
  font-weight: 700;
}
.login image{
	width: 100%;
}
.login input{
  width: 80%;
  border: 1px solid #ccc;
  font-size: 30rpx;
  margin-left:5%;
  padding-left:10rpx;
  height:1.8rem;
  display: inline-block;
  vertical-align: middle;
  margin-right:20rpx; 
}
.login-bottom{
padding:20rpx 51rpx;

}
.login-bottom view{
  margin-top: 20rpx;
}
.login-bottom image{
  width: 40rpx;
  height:40rpx;
}
.login-btn{
	width: 82%;
  margin-left:5%;
	color: #fff;
  display: block;
  margin-top:50rpx;
  line-height:90rpx;
