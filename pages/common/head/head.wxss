.show {
  display: block;
}

.detail-more {
  width: 160rpx;
  line-height: 50rpx;
  border: 1px solid #ccc;
  position: absolute;
  top: 83rpx;
  right: 15rpx;
  background-color: #fff;
}

.detail-more image {
  width: 30rpx;
  height: 30rpx;
}

.detail-more::after {
  position: absolute;
  display: block;
  content: "";
  width: 0;
  height: 0;
  border: 8px dashed transparent;
  right: 10px;
  top: -7px;
  left: 10px;
  border-bottom-color: #fff;
  bottom: -1px;
  border-bottom-style: solid;
  border-width: 0 8px 8px;
  pointer-events: none;
  z-index: 1;
}

.detail-more::before {
  position: absolute;
  display: block;
  content: "";
  width: 0;
  height: 0;
  border: 8px dashed transparent;
  z-index: 1;
  border-bottom-style: solid;
  border-width: 0 8px 8px;
  border-bottom-color: #ddd;
  bottom: 0;
  left: 10px;
  top: -8px;
  pointer-events: none;
}

.detail-more view {
  padding-left: 10rpx;
}

.mainDetail {
  margin-top: 30rpx;
  overflow-y: auto;
  padding: 0 30rpx;
  -webkit-overflow-scrolling: touch;
  position: relative;
  background-color: #fff;
